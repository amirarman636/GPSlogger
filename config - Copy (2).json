{
  "log": {
    "loglevel": "info",
    "access": "C:\\v@ray\\access.log",
    "error": "C:\\v@ray\\error.log"
  },
  "inbounds": [
    {
      "port": 443, // Change to your preferred port
      "protocol": "vmess", // V2Ray protocol for VPN
      "settings": {
        "clients": [
          {
            "id": "620a0f44-783d-43f5-b29c-e9dd530b3d8f", // Generate a unique UUID for each client
            "alterId": 64 // AlterID for security (adjust as needed)
          }
        ]
      },
      "streamSettings": {
        "network": "tcp", // Use TCP for reliability, change to "ws" for WebSocket
        "security": "tls", // Use TLS for encryption
        "tlsSettings": {
          "certificates": [
            {
              "certificateFile": "C:\\v@ray\\cert.pem", // Path to your SSL certificate
              "keyFile": "C:\\v@ray\\key.pem" // Path to your private key
            }
          ]
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "settings": {},
      "tag": "direct"
    }
  ],
  "routing": {
    "domainStrategy": "IPOnDemand",
    "rules": [
      {
        "type": "field",
        "ip": ["geoip:private"],
        "outboundTag": "blocked"
      }
    ]
  },
  "dns": {
    "servers": [
      "1.1.1.1",
      "8.8.8.8",
      "localhost"
    ]
  },
  "policy": {
    "levels": {
      "0": {
        "uplinkOnly": 0,
        "downlinkOnly": 0
      }
    },
    "system": {
      "statsInboundUplink": false,
      "statsInboundDownlink": false,
      "statsOutboundUplink": false,
      "statsOutboundDownlink": false
    }
  }
